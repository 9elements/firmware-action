# EditorConfig: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
charset = utf-8
indent_style = tab

[*.py]
indent_style = space
indent_size = 4

[*.{json,yml,yaml,js,mjs,css,cff}]
indent_style = space
indent_size = 2

[Dockerfile]
indent_style = space
indent_size = 4

[{*.md,.pylintrc,index.hbs,firmware-action.bash,firmware-action.fish,firmware-action.zsh}]
indent_style = unset
indent_size = unset
generated_code = true

